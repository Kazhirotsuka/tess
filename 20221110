#送信

def toTwo(bt_addrs, data):
     client_thread = threading.Thread(
     target=l2cap_client(
         bt_addrs[0], send_data_list[0]))

def toThree(bt_addrs, data):
     client_thread = threading.Thread(
     target=l2cap_client(
         bt_addrs[1], send_data_list[0]))

def toFour(bt_addrs, data):
     client_thread = threading.Thread(
     target=l2cap_client(
         bt_addrs[2], send_data_list[0]))

#送信はまとめて
def SEND():
    with ThreadPoolExecutor(max_workers=3) as executor:
        executor.submit(toTwo())
        executor.submit(toThree())
        executor.submit(toFour())
        
#受信


server_thread = threading.Thread(target=l2cap_server(receive_data_list))
